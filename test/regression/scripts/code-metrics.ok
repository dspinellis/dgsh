(

	export SGDIR=/tmp/sg-$$.0

	rm -rf $SGDIR

	# Cleanup on exit or interrupt
	cleanup()
	{
		SIGNAL=$1
		[ $SIGNAL = EXIT ] || echo dgsh interrupted. Cleaning up... 1>&2

		# Stop key-value stores
		dgsh-readval -q -s "$SGDIR/FNAMELEN" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NSTRUCT" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NTYPEDEF" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NVOID" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NGETS" 2>/dev/null
dgsh-readval -q -s "$SGDIR/IDLEN" 2>/dev/null
dgsh-readval -q -s "$SGDIR/CHLINESCHAR" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NCCHAR" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NCOMMENT" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NCOPYRIGHT" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NCFILE" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NCDIR" 2>/dev/null
dgsh-readval -q -s "$SGDIR/CLINESCHAR" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NFUNCTION" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NGOTO" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NREGISTER" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NMACRO" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NINCLUDE" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NCONST" 2>/dev/null
dgsh-readval -q -s "$SGDIR/NHFILE" 2>/dev/null

		# Kill processes we have launched in the background
		kill $SGPID 2>/dev/null

		# Remove temporary directory
		rm -rf "$SGDIR"

		# Propagate real signals and exit with non-0
		if [ $SIGNAL != EXIT ]
		then
			trap - $SIGNAL EXIT
			kill -s $SIGNAL $$
		fi

		# Exit with the original exit value
		exit

	}

	for sig in HUP INT QUIT TERM EXIT
	do
		trap "cleanup $sig" $sig
	done

	mkdir $SGDIR
	
mkfifo 	$SGDIR/npi-1.0.0 \
	$SGDIR/npi-1.1.0 \
	$SGDIR/npi-2.0.0 \
	$SGDIR/npi-2.1.0 \
	$SGDIR/npi-2.2.0 \
	$SGDIR/npi-2.3.0 \
	$SGDIR/npi-2.4.0 \
	$SGDIR/npi-3.0.0 \
	$SGDIR/npi-3.1.0 \
	$SGDIR/npi-3.2.0 \
	$SGDIR/npi-3.3.0 \
	$SGDIR/npi-3.4.0 \
	$SGDIR/npi-4.0.0 \
	$SGDIR/npi-4.1.0 \
	$SGDIR/npi-5.0.0 \
	$SGDIR/npi-5.1.0 \
	$SGDIR/npi-6.0.0 \
	$SGDIR/npi-6.1.0 \
	$SGDIR/npi-7.0.0 \
	$SGDIR/npi-7.1.0 \
	$SGDIR/npi-7.2.0 \
	$SGDIR/npi-7.3.0 \
	$SGDIR/npi-7.4.0 \
	$SGDIR/npi-7.5.0

 {  find "$@" \( -name \*.c -or -name \*.h \) -type f -print0
}</dev/null  |
dgsh-tee  -o $SGDIR/npi-1.0.0 -o $SGDIR/npi-1.1.0  & SGPID="$! $SGPID"
 {  tr \\0 \\n |
		# Remove path
		sed 's|^.*/||' |
		# Maintain average
		awk '{s += length($1); n++} END {print s / n}'
} <$SGDIR/npi-1.0.0 | dgsh-writeval  -s $SGDIR/FNAMELEN  & SGPID="$! $SGPID"
 {  xargs -0 cat
} <$SGDIR/npi-1.1.0 |
dgsh-tee  -o $SGDIR/npi-2.0.0 -o $SGDIR/npi-2.1.0 -o $SGDIR/npi-2.2.0 -o $SGDIR/npi-2.3.0 -o $SGDIR/npi-2.4.0  & SGPID="$! $SGPID"
 {  sed 's/#/@/g;s/\\[\\"'\'']/@/g;s/"[^"]*"/""/g;'"s/'[^']*'/''/g" |
			cpp -P 2>/dev/null
} <$SGDIR/npi-2.0.0 |
dgsh-tee  -o $SGDIR/npi-3.0.0 -o $SGDIR/npi-3.1.0 -o $SGDIR/npi-3.2.0 -o $SGDIR/npi-3.3.0 -o $SGDIR/npi-3.4.0  & SGPID="$! $SGPID"
 {   egrep -c 'struct[ 	]*{|struct[ 	]*[a-zA-Z_][a-zA-Z0-9_]*[       ]*{'
} <$SGDIR/npi-3.0.0 | dgsh-writeval  -s $SGDIR/NSTRUCT  & SGPID="$! $SGPID"
 {  grep -cw typedef
} <$SGDIR/npi-3.1.0 | dgsh-writeval  -s $SGDIR/NTYPEDEF  & SGPID="$! $SGPID"
 {  grep -cw void
} <$SGDIR/npi-3.2.0 | dgsh-writeval  -s $SGDIR/NVOID  & SGPID="$! $SGPID"
 {  grep -cw gets
} <$SGDIR/npi-3.3.0 | dgsh-writeval  -s $SGDIR/NGETS  & SGPID="$! $SGPID"
 {  tr -cs 'A-Za-z0-9_' '\n' |
				sort -u |
				awk '/^[A-Za-z]/ { len += length($1); n++ } END {print len / n}'
} <$SGDIR/npi-3.4.0 | dgsh-writeval  -s $SGDIR/IDLEN  & SGPID="$! $SGPID"
 {  wc -lc | awk '{OFS=":"; print $1, $2}'
} <$SGDIR/npi-2.1.0 | dgsh-writeval  -s $SGDIR/CHLINESCHAR  & SGPID="$! $SGPID"
 {  sed 's/#/@/g' |
			cpp -traditional -P 2>/dev/null |
			wc -c |
			awk '{OFMT = "%.0f"; print $1/1000}'
} <$SGDIR/npi-2.2.0 | dgsh-writeval  -s $SGDIR/NCCHAR  & SGPID="$! $SGPID"
 {  egrep -c '/\*|//'
} <$SGDIR/npi-2.3.0 | dgsh-writeval  -s $SGDIR/NCOMMENT  & SGPID="$! $SGPID"
 {  grep -ci copyright
} <$SGDIR/npi-2.4.0 | dgsh-writeval  -s $SGDIR/NCOPYRIGHT  & SGPID="$! $SGPID"
 {  find "$@" -name \*.c -type f -print0
}</dev/null  |
dgsh-tee  -o $SGDIR/npi-4.0.0 -o $SGDIR/npi-4.1.0  & SGPID="$! $SGPID"
 {  tr \\0 \\n
} <$SGDIR/npi-4.0.0 |
dgsh-tee  -o $SGDIR/npi-5.0.0 -o $SGDIR/npi-5.1.0  & SGPID="$! $SGPID"
 {  wc -l
} <$SGDIR/npi-5.0.0 | dgsh-writeval  -s $SGDIR/NCFILE  & SGPID="$! $SGPID"
 {  sed 's,/[^/]*$,,;s,^.*/,,' | sort -u | wc -l
} <$SGDIR/npi-5.1.0 | dgsh-writeval  -s $SGDIR/NCDIR  & SGPID="$! $SGPID"
 {  xargs -0 cat
} <$SGDIR/npi-4.1.0 |
dgsh-tee  -o $SGDIR/npi-6.0.0 -o $SGDIR/npi-6.1.0  & SGPID="$! $SGPID"
 {  wc -lc | awk '{OFS=":"; print $1, $2}'
} <$SGDIR/npi-6.0.0 | dgsh-writeval  -s $SGDIR/CLINESCHAR  & SGPID="$! $SGPID"
 {  sed 's/#/@/g;s/\\[\\"'\'']/@/g;s/"[^"]*"/""/g;'"s/'[^']*'/''/g" |
			cpp -P 2>/dev/null
} <$SGDIR/npi-6.1.0 |
dgsh-tee  -o $SGDIR/npi-7.0.0 -o $SGDIR/npi-7.1.0 -o $SGDIR/npi-7.2.0 -o $SGDIR/npi-7.3.0 -o $SGDIR/npi-7.4.0 -o $SGDIR/npi-7.5.0  & SGPID="$! $SGPID"
 {  grep -c '^{'
} <$SGDIR/npi-7.0.0 | dgsh-writeval  -s $SGDIR/NFUNCTION  & SGPID="$! $SGPID"
 {  grep -cw goto
} <$SGDIR/npi-7.1.0 | dgsh-writeval  -s $SGDIR/NGOTO  & SGPID="$! $SGPID"
 {  grep -cw register
} <$SGDIR/npi-7.2.0 | dgsh-writeval  -s $SGDIR/NREGISTER  & SGPID="$! $SGPID"
 {  grep -c '@[ 	]*define[ 	][ 	]*[a-zA-Z_][a-zA-Z0-9_]*('
} <$SGDIR/npi-7.3.0 | dgsh-writeval  -s $SGDIR/NMACRO  & SGPID="$! $SGPID"
 {  grep -c '@[ 	]*include'
} <$SGDIR/npi-7.4.0 | dgsh-writeval  -s $SGDIR/NINCLUDE  & SGPID="$! $SGPID"
 {  grep -o -h '[0-9][x0-9][0-9a-f]*' | wc -l
} <$SGDIR/npi-7.5.0 | dgsh-writeval  -s $SGDIR/NCONST  & SGPID="$! $SGPID"
 {  find "$@" -name \*.h -type f | wc -l
}</dev/null  | dgsh-writeval  -s $SGDIR/NHFILE  & SGPID="$! $SGPID"

# Gather the results
cat <<EOF
FNAMELEN: `dgsh-readval -s $SGDIR/FNAMELEN`
NSTRUCT: `dgsh-readval -s $SGDIR/NSTRUCT`
NTYPEDEF: `dgsh-readval -s $SGDIR/NTYPEDEF`
IDLEN: `dgsh-readval -s $SGDIR/IDLEN`
CHLINESCHAR: `dgsh-readval -s $SGDIR/CHLINESCHAR`
NCCHAR: `dgsh-readval -s $SGDIR/NCCHAR`
NCOMMENT: `dgsh-readval -s $SGDIR/NCOMMENT`
NCOPYRIGHT: `dgsh-readval -s $SGDIR/NCOPYRIGHT`
NCFILE: `dgsh-readval -s $SGDIR/NCFILE`
NCDIR: `dgsh-readval -s $SGDIR/NCDIR`
CLINESCHAR: `dgsh-readval -s $SGDIR/CLINESCHAR`
NFUNCTION: `dgsh-readval -s $SGDIR/NFUNCTION`
NGOTO: `dgsh-readval -s $SGDIR/NGOTO`
NREGISTER: `dgsh-readval -s $SGDIR/NREGISTER`
NMACRO: `dgsh-readval -s $SGDIR/NMACRO`
NINCLUDE: `dgsh-readval -s $SGDIR/NINCLUDE`
NCONST: `dgsh-readval -s $SGDIR/NCONST`
NVOID: `dgsh-readval -s $SGDIR/NVOID`
NHFILE: `dgsh-readval -s $SGDIR/NHFILE`
NGETS: `dgsh-readval -s $SGDIR/NGETS`
EOF

)  3<&0 
